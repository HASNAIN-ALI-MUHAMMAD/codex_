{
      "tool_list": [
      {
            "name": "readFile",
            "description": "Reads the content of a specified file from the project directory.",
            "parameters": {
                  "type": "object",
                  "properties": {
                              "filename": {
                                    "type": "string",
                                    "description": "The name of the file to read, including its extension."
                              },
                              "path":{
                                    "type": "string",
                                    "description": "The path of the file to read, relative to the project root."
                              }
                        },
                  "required": ["filename","path"]
            },
            "returns":{
                  "type":"object",
                  "properties":{
                        "filename":{
                              "type":"string",
                              "description":"THe name of the file read."
                        },
                        "path":{
                              "type":"string",
                              "description":"Path of the file read."
                        },
                        "file_content":{
                              "type":"string",
                              "description":"Content of the file in string format (utf8)."
                        },
                        "dateRead":{
                              "type":"date",
                              "description":"The date and time when the file was last read."
                        },
                        "lastModified":{
                              "type":"date",
                              "description":"The date and time when the file was last modified."
                        }
                  }
            }
      },
      {
            "name": "writeFile",
            "description": "Writes some data to a specified file in the project directory.",
            "parameters": {
                  "type": "object",
                  "properties": {
                        "filename":{
                              "type":"string",
                              "description":"The name of the file to write, including its extension."
                        },
                        "path":{
                              "type":"string",
                              "description":"The path of the file to write, relative to the project root."
                        }
                  },
                  "required": ["filename","path"]
            },
            "returns": {
                  "type": "object",
                  "properties": {
                        "success": {
                              "type": "boolean",
                              "description": "Indicates whether the file was written successfully."
                        },
                        "filename":{
                              "type":"string",
                              "description":"The name of the file that was written."
                        },
                        "path":{
                              "type":"string",
                              "description":"The path of the file that was written, relative to the project root."
                        },
                        "lastModified":{
                              "type":"date",
                              "description":"The date and time when the file was last modified."
                        }
                  }
            }
      },
      {
            "name": "listFiles",
            "description": "Lists all files in the project directory.",
            "parameters": {
                  "type": "object",
                  "properties": {
                        "path":{
                              "type":"string",
                              "description":"The path of the directory to list files from, relative to the project root."
                        }
                  },
                  "required": ["path"]
            },
            "returns": {
                  "type": "array",
                  "items": {
                        "type": "object",
                        "properties": {
                              "filename": {
                                    "type": "string",
                                    "description": "The name of the file."
                              },
                              "path":{
                                    "type":"string",
                                    "description":"The path of the file, relative to the project root."
                              },
                              "lastModified":{
                                    "type":"date",
                                    "description":"The date and time when the file was last modified."
                              }
                        }
                  }
            }
      },
      {
            "name":"deleteFile",
            "description":"Deletes a specified file from the project directory.",
            "parameters":{
                  "type":"object",
                  "properties":{
                        "filename":{
                              "type":"string",
                              "description":"The name of the file to delete, including its extension."
                        },
                        "path":{
                              "type":"string",
                              "description":"The path of the file to delete, relative to the project root."
                        }
                  }
            }
      }
      ]
}